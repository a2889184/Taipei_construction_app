<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.user.myapplication.MainActivity">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="今日施工資訊"
        android:id="@+id/button_Taipei"
        android:layout_alignParentTop="true"
        android:textAlignment="center"
        android:textSize="@dimen/abc_action_bar_content_inset_material"
        android:visibility="visible"
        android:singleLine="true"
        android:nestedScrollingEnabled="false"
        android:background="#efebeb"
        android:textColorHint="#ffffff"
        android:textColor="#040404"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="水質監測資訊(未完成)"
        android:id="@+id/button_Xinbei"
        android:textAlignment="center"
        android:textSize="@dimen/abc_action_bar_content_inset_material"
        android:visibility="visible"
        android:singleLine="false"
        android:nestedScrollingEnabled="false"
        android:background="#efebeb"
        android:textColorHint="#ffffff"
        android:textColor="#040404"
        android:layout_below="@+id/button_Taipei"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/button_Xinbei">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:scrollbars = "vertical"
            android:id="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="false"
            android:layout_alignParentBottom="true"
            android:height="@dimen/abc_config_prefDialogWidth"
            android:nestedScrollingEnabled="true"
            android:phoneNumber="false" />
    </ScrollView>
</RelativeLayout>

